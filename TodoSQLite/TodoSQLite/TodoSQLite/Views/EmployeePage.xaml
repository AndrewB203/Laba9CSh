<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TodoSQLite.Views.EmployeePage"
             Title="{Binding FirstName, StringFormat='{0} {1}', Converter={StaticResource StringConcatConverter}, ConverterParameter=LastName}"
             xmlns:models="clr-namespace:TodoSQLite.Models"
             x:DataType="models:Employee">
    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="10"
                             VerticalOptions="StartAndExpand">
            <Label Text="First Name" />
            <Entry Text="{Binding FirstName}" />
            <Label Text="Last Name" />
            <Entry Text="{Binding LastName}" />
            <Label Text="Email" />
            <Entry Text="{Binding Email}" />
            <Label Text="Is Active" />
            <Switch IsToggled="{Binding IsActive}" />
            <Button Text="Save"
                    Clicked="OnSaveClicked" />
            <Button Text="Delete"
                    Clicked="OnDeleteClicked" />
            <Button Text="Cancel"
                    Clicked="OnCancelClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>