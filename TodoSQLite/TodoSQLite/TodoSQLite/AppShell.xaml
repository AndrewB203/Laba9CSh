<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:TodoSQLite.Views"
       x:Class="TodoSQLite.AppShell"
       FlyoutBehavior="Disabled">

    <!-- Define routes for your pages -->
    <ShellContent
        Title="Main"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Tasks"
        ContentTemplate="{DataTemplate views:TodoListPage}"
        Route="TodoListPage" />

    <ShellContent
        Title="Departments"
        ContentTemplate="{DataTemplate views:DepartmentListPage}"
        Route="DepartmentListPage"/>

    <ShellContent
        Title="Positions"
        ContentTemplate="{DataTemplate views:PositionListPage}"
        Route="PositionListPage"/>

    <ShellContent
        Title="Employees"
        ContentTemplate="{DataTemplate views:EmployeeListPage }"
        Route="EmployeeListPage"/>

</Shell>