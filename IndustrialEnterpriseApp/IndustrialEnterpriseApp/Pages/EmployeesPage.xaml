<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IndustrialEnterpriseApp.Pages.EmployeesPage"
             Title="Employees">
    <StackLayout>
        <ListView x:Name="EmployeesListView" ItemSelected="EmployeesListView_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding FullName}" FontSize="Medium" />
                            <Label Text="{Binding Position.Title}" FontSize="Small" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Add Employee" Clicked="OnAddEmployeeClicked" />
        <Button Text="Edit Employee" Clicked="OnEditEmployeeClicked" />
        <Button Text="Delete Employee" Clicked="OnDeleteEmployeeClicked" />
    </StackLayout>
</ContentPage>