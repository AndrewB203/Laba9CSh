<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IndustrialEnterpriseApp.Pages.DepartmentsPage"
             Title="Departments">
    <StackLayout>
        <ListView x:Name="DepartmentsListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding Title}" FontSize="Medium" />
                            <Label Text="{Binding Head.FullName}" FontSize="Small" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Add Department" Clicked="OnAddDepartmentClicked" />
        <Button Text="Edit Department" Clicked="OnEditDepartmentClicked" />
        <Button Text="Delete Department" Clicked="OnDeleteDepartmentClicked" />
    </StackLayout>
</ContentPage>