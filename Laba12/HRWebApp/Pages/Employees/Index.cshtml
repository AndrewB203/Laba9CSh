@page
@model HRWebApp.Pages.Employees.IndexModel
@using HRWebApp.Models

<h1>Список сотрудников</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Создать нового сотрудника</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Отчество</th>
            <th>Дата рождения</th>
            <th>Должность</th>
            <th>Отдел</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model.Employees)
        {
            <tr>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.MiddleName</td>
                <td>@employee.DateOfBirth.ToShortDateString()</td>
                <td>@employee.Position.Title</td>
                <td>@employee.Department.Name</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@employee.Id" class="btn btn-secondary">Редактировать</a> |
                    <a asp-page="./Details" asp-route-id="@employee.Id" class="btn btn-info">Подробнее</a> |
                    <a asp-page="./Delete" asp-route-id="@employee.Id" class="btn btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>